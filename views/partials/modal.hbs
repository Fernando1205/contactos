<!-- Modal -->
<div class="modal fade" id="createContact" tabindex="-1" aria-labelledby="createContactLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createContactLabel">Crear nuevo contacto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formContact">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" placeholder="Nombre" id="name" name="name" required>
                        <label>
                            <i class="fa-solid fa-user"></i>
                            Nombre
                        </label>
                        <div class="invalid-feedback">
                            El campo nombre es requerido
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" placeholder="Apellidos" id="lastname" name="lastname">
                        <label>
                            <i class="fa-solid fa-user"></i>
                            Apellidos
                        </label>
                        <div class="invalid-feedback">
                            El campo apellido es requerido
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" placeholder="Correo" id="email" name="email">
                        <label>
                            <i class="fa-solid fa-envelope"></i>
                            Correo
                        </label>
                        <div class="invalid-feedback">
                            El campo correo es requerido
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" placeholder="Teléfono" id="phone" name="phone">
                        <label>
                            <i class="fa-solid fa-phone"></i>
                            Teléfono
                        </label>
                        <div class="invalid-feedback">
                            El campo telefono es requerido
                        </div>
                    </div>

                    <input type="hidden" value="{{ user.id }}" id="id" name="id">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <input type="submit" class="btn btn-primary" form="formContact" value="Guardar" id="btnSubmit">
                <input type="submit" class="btn btn-primary" form="formContact" value="Actualizar" id="btnUpdate">

            </div>
        </div>
    </div>
</div>